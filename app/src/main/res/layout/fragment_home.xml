<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="18dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.appbar.AppBarLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.Toolbar
                        android:layout_width="280dp"
                        android:layout_height="0dp" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="47dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        app:srcCompat="@drawable/home"/>

                </com.google.android.material.appbar.AppBarLayout>

            </TableRow>
        </TableLayout>


        <!-- Food -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textViewFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/food" />

                <EditText
                    android:id="@+id/editTextFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="textEmailAddress" />

                <TextView
                    android:id="@+id/textViewSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/sum" />

                <EditText
                    android:id="@+id/editTextSum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="3"
                    android:inputType="textEmailAddress" />

            </TableRow>
        </TableLayout>
        <!-- //Food -->

        <!-- Sum -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

            </TableRow>
        </TableLayout>
        <!-- //Sum -->

        <!-- Breakfast -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageViewAddBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_menu_add"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textViewHeadlineBreakfast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/breakfast"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
        <!-- //Breakfast -->

        <!-- Lunch -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageViewAddLunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_menu_add"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textViewHeadlineLunch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lunch"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
        <!-- //Lunch -->

        <!-- Before training -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageViewAddBeforeTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_menu_add"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textViewHeadlineBeforeTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/before_training"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
        <!-- //Before training -->

        <!-- After training -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageViewAddAfterTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_menu_add"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textViewHeadlineAfterTraining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/after_training"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
        <!-- //After training -->

        <!-- Dinner -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageViewAddDinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_menu_add"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textViewHeadlineDinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dinner"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
        <!-- //Dinner -->

        <!-- Snacks -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageViewAddSnacks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_menu_add"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textViewHeadlineSnacks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/snacks"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
        <!-- //Snacks -->

        <!-- Supper -->

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="18dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageViewAddSupper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_menu_add"
                    tools:ignore="VectorDrawableCompat" />

                <TextView
                    android:id="@+id/textViewHeadlineSupper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/supper"
                    android:textSize="18sp" />
            </TableRow>
        </TableLayout>
        <!-- //Supper -->


    </LinearLayout>

</ScrollView>